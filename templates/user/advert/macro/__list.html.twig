{% macro list(advert, settings, photo, headers, vedettes, encadres, urgents, gallery) %}
    {% set photo_principale = app_advert_photo(advert.images) %}

    {% if advert.subDivision|length > 0 %}
        {% set route = path('app_advert_show', {'category_slug': advert.category.slug, 'sub_category_slug': advert.subCategory.slug,
            'sub_division_slug': advert.subDivision.slug, 'city': advert.location.name,
            'reference': advert.reference, 'slug': advert.slug}) %}
    {% else %}
        {% set route = path('app_advert_show_s', {'category_slug': advert.category.slug, 'sub_category_slug': advert.subCategory.slug,
            'city': advert.location.name, 'reference': advert.reference, 'slug': advert.slug}) %}
    {% endif %}

<div id="advert_{{ advert.id }}" class="card app-user-advert-block mb-4">
    <div class="row no-gutters">
        <div class="col-6 col-md-4 pr-md-4">
            {% if photo_principale %}
                <img src="{{ asset(photo_principale.webPath) }}" class="img-fluid advert-image" alt="{{ photo_principale.name }}" />
            {% else %}
                <img src="{{ asset('images/no_image.png') }}" class="img-fluid" alt="" />
            {% endif %}
        </div>
        <div class="col-6 col-md-8">
            {# Petit telephone #}
            <div class="card-body pb-0 pt-2 px-1 d-block d-md-none">
                <div class="font-weight-stone-600 price d-flex justify-content-center text-default
                        border border-default text-center mx-1 mb-2"
                     style="border-width: 1.6px !important; border-top-right-radius: 20px !important">
                    <div class="number d-inline-block">{{ advert.price }}</div>
                    <img src="{{ asset('images/devise.png') }}" class="devise d-inline-block" alt="devise">
                </div>
                <div class="text-muted font-weight-stone-500 location mx-1">
                    <div class="my-1">
                        <i class="fas fa-map-marker-alt text-primary"></i> {{ advert.location.name }}
                        {% if advert.location.detail %}({{ advert.location.detail }}){% endif %}
                    </div>
                    {% if advert.validatedAt %}
                        <div class="mt-2">
                            <i class="far fa-clock text-primary"></i> {{ advert.validatedAt|ago }}
                        </div>
                    {% endif %}
                </div>
            </div>
            {# Petit telephone #}
            <div class="card-body px-2 pl-md-0 pr-md-3 pt-2 pb-0 d-none d-md-block">
                <div class="d-flex">
                    <h6 class="font-weight-stone-600 text-primary title">
                        {{ advert.title|u.truncate(28) }}
                    </h6>
                    <div class="ml-auto font-weight-stone-600 d-flex price text-default">
                        {% if advert.price == 0 %}
                            Sur demande
                        {% else %}
                            <div class="number">{{ advert.price }}</div><img src="{{ asset('images/devise.png') }}" class="devise" alt="">
                        {% endif %}
                    </div>
                </div>
                <div class="blue-grey-text font-weight-stone-600 small location">
                    <i class="fas fa-map-marker-alt mr-1"></i> {{ advert.location.name }}
                    {% if advert.location.detail %}(<span class="px-1 mb-0">{{ advert.location.detail }}</span>){% endif %}

                    {% if advert.validatedAt %}
                        | <i class="far fa-clock mx-1"></i> {{ advert.validatedAt|ago }}
                    {% endif %}
                </div>
                <div class="text-secondary font-weight-stone-500 mt-2 small">
                    {{ advert.category }} <i class="fas fa-angle-right ml-1"></i>
                    {{ advert.subCategory }}
                    {% if advert.subDivision %}
                        <i class="fas fa-angle-right ml-1"></i> {{ advert.subDivision }}
                    {% endif %}
                </div>
                <p class="content grey-text font-weight-stone-500 mt-2">
                    {{ advert.description|u.truncate(200) }}
                </p>
            </div>
        </div>
        <div class="col-12 pr-md-3 info {% if not advert.shop|length > 0 %}user{% endif %}">
            {# Petit telephone #}
            <div class="d-block d-md-none px-2">
                <div class="small-8 font-weight-stone-600 text-primary mt-3">{{ advert.title|u.truncate(40, '...') }}</div>
                <div class="text-default font-weight-stone-600 mt-2 small-8">
                    {{ advert.category }} <i class="fas fa-angle-right"></i>
                    {{ advert.subCategory }}
                    {% if advert.subDivision %}
                        <i class="fas fa-angle-right"></i> {{ advert.subDivision }}
                    {% endif %}
                </div>
                <p class="content grey-text font-weight-stone-500 small my-2">
                    {{ advert.description|u.truncate(92) }}
                </p>
                <div class="d-flex justify-content-between pb-2">
                    {#  {% include 'user/advert/details/button_sm.html.twig' %}#}

                    {{ _self.btn_sm(advert, route, settings, photo, headers, vedettes, encadres, urgents, gallery) }}
                </div>
            </div>
            {# Petit telephone #}
            <div class="d-none d-md-flex justify-content-end mb-3 mx-2">
                {#  {% include 'user/advert/details/button.html.twig' %}#}

                {{ _self.btn(advert, route, settings, photo, headers, vedettes, encadres, urgents, gallery) }}
            </div>
        </div>
    </div>
</div>

    {{ _self.gallery(advert, settings, gallery) }}
    {{ _self.vedette(advert, settings, encadres) }}
    {{ _self.photo(advert, settings, photo) }}
    {{ _self.encadre(advert, settings,encadres) }}
    {{ _self.header(advert, settings, headers) }}
    {{ _self.urgent(advert, settings, urgents) }}
    {{ _self.vedette(advert, settings, vedettes) }}


