{% import 'Ui/Macro/messages.html.twig' as message %}

{% set param = configuration.modal.validate %}

{{ form_start(form) }}
<div class="modal fade" id="confirmReload" tabindex="-1" role="dialog" aria-labelledby="confirmMulti" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-notify modal-primary" role="document">
        <div class="modal-content text-center">
            <div class="modal-header d-flex justify-content-center">
                {{ message.modal(message) }}
            </div>
            <div class="modal-body">
                <div class="mt-3"><i class="fas fa-check fa-4x animated rotateIn"></i></div>
                <input type="hidden" name="referer" value="{{app.request.headers.get('referer')}}"/>
            </div>
            <div class="modal-footer flex-center">
                <button type="submit" class="btn btn-outline-primary font-weight-stone-500 waves-effect">Oui</button>
                <button type="button" class="btn btn-primary font-weight-stone-500" data-dismiss="modal">Non</button>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
