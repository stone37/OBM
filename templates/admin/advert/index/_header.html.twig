<section class="card header mt-lg-70 mt-70 mb-4">
    <div class="card-body py-2">
        <div class="row">
            <div class="col-12">
                <div class="d-flex">
                    <span class="btn-floating btn-lg btn-primary d-none d-md-inline my-0" style="cursor: default;">
                        {% if type == 1 %}
                            <i class="fas fa-clipboard-list"></i>
                        {% elseif type == 2 %}
                            <i class="fas fa-clipboard-check"></i>
                        {% else %}
                            <i class="fas fa-clipboard"></i>
                        {% endif %}
                    </span>
                    <h2 class="h2-responsive font-weight-stone-600 text-primary ml-md-3 mt-2 pt-1">
                        {% if type == 1 %}
                            Annonces en attente de validation
                        {% elseif type == 2 %}
                            Annonces validées
                        {% elseif type == 3 %}
                            Annonces refusées
                        {% elseif type == 4 %}
                            Annonces retirées
                        {% else %}
                            Annonces expirées
                        {% endif %}
                    </h2>
                </div>
            </div>
        </div>
    </div>
</section>