<div class="row">
    <div class="col-12 col-md-4">
        {{ form_row(form.title) }}
        <small class="form-text text-muted" style="margin-top: -4px">
            Ce champ est obligatoire
        </small>
    </div>
    <div class="col-12 col-md-4">
        <div>
            <div>
                {{ form_widget(form.category) }}
                <label class=" ml-3">{{ form.category.vars.label|raw }}</label>
            </div>
            <div style="margin-top: -15px;" class="red-text font-weight-stone-500">{{ form_errors(form.category) }}</div>
        </div>
    </div>
    <div class="col-12 mt-3">
        <div class="grey-text " style="margin-bottom: -25px;">{{ form_label(form.content) }}</div>
        <div class="md-form md-outline">
            {{ form_widget(form.content) }}
            <div class="red-text font-weight-stone-500">{{ form_errors(form.content) }}</div>
        </div>
        <small class="form-text text-muted" style="margin-top: -15px">
            Ce champ est obligatoire
        </small>
    </div>
    <div class="col-12 col-md-4 mt-3">
        <div class="grey-text pb-1">{{ form.enabled.vars.label|trans }}</div>
        <div class="switch stone-switch mt-1 ml-md-2">
            <label>
                Non
                <input type="checkbox" name="{{ form.enabled.vars.full_name }}" id="{{ form.enabled.vars.id }}"
                       value="{{ form.enabled.vars.value }}" {% if form.enabled.vars.checked %}checked="checked{% endif %}">
                <span class="lever"></span>
                Oui
            </label>
        </div>
    </div>
</div>
