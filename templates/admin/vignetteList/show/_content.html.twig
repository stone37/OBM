{% import 'Ui/Macro/buttons.html.twig' as buttons %}

<div class="row app-user mb-5">
    <div class="col-12">
        <table class="table table-borderless table-responsive-sm table-responsive-md">
            <tbody>
            <tr>
                <td>
                    <div class="title font-weight-stone-600 grey-text">Id</div>
                    <div class="content text-primary font-weight-stone-600">{{ vignette.id }}</div>
                </td>
                <td>
                    <div class="title font-weight-stone-600 grey-text">Reference</div>
                    <div class="content text-primary font-weight-stone-600">{{ vignette.reference }}</div>
                </td>
                <td>
                    <div class="title font-weight-stone-600 grey-text">Position</div>
                    <div class="content text-primary font-weight-stone-600">{{ vignette.position }}</div>
                </td>
                <td>
                    <div class="title font-weight-stone-600 grey-text">Catégorie</div>
                    <div class="content text-primary font-weight-stone-600">{{ vignette.category }}</div>
                </td>
                <td>
                    <div class="title font-weight-stone-600 grey-text">Date de debut</div>
                    <div class="content text-primary font-weight-stone-600">{{ vignette.startDate }}</div>
                </td>
                <td>
                    <div class="title font-weight-stone-600 grey-text">Date de fin</div>
                    <div class="content text-primary font-weight-stone-600">{{ vignette.endDate }}</div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="title font-weight-stone-600 grey-text">Siret</div>
                    <div class="content text-primary font-weight-stone-600">{{ vignette.siret }}</div>
                </td>
                <td colspan="3">
                    <div class="title font-weight-stone-600 grey-text">Description</div>
                    <div class="content text-primary font-weight-stone-600">{{ vignette.description }}</div>
                </td>
                <td>
                    <div class="title font-weight-stone-600 grey-text">Nom</div>
                    <div class="content text-primary font-weight-stone-600">{{ vignette.firstname }}</div>
                </td>
                <td>
                    <div class="title font-weight-stone-600 grey-text">Prénom</div>
                    <div class="content text-primary font-weight-stone-600">{{ vignette.lastname }}</div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="title font-weight-stone-600 grey-text">Email</div>
                    <div class="content text-primary font-weight-stone-600">{{ vignette.email }}</div>
                </td>
                <td>
                    <div class="title font-weight-stone-600 grey-text">Téléphone</div>
                    <div class="content text-primary font-weight-stone-600">{{ vignette.price }}</div>
                </td>
                <td>
                    <div class="title font-weight-stone-600 grey-text">Ville</div>
                    <div class="content text-primary font-weight-stone-600">{{ vignette.city }}</div>
                </td>
                <td>
                    <div class="title font-weight-stone-600 grey-text">Enseigne</div>
                    <div class="content text-primary font-weight-stone-600">{{ vignette.societyName }}</div>
                </td>
                <td>
                    <div class="title font-weight-stone-600 grey-text">Site web</div>
                    <div class="content text-primary font-weight-stone-600">{{ vignette.siteWeb }}</div>
                </td>
                <td>
                    <div class="title font-weight-stone-600 grey-text">Status</div>
                    <div class="content text-primary font-weight-stone-600">
                        {% if vignette.enabled %}
                            <span class="badge badge-success">
                                <i class="fas fa-check mr-1"></i> Actif
                            </span>
                        {% else %}
                            <span class="badge badge-danger">
                                <i class="fas fa-times mr-1"></i> Inactif
                            </span>
                        {% endif %}
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="title font-weight-stone-600 grey-text">Image</div>
                    <div class="content text-primary font-weight-stone-600">
                        {% if vich_uploader_asset(vignette, 'file') %}
                            <img src="{{ vich_uploader_asset(vignette, 'file') }}" class="img-fluid table-img" alt="" />
                        {% else %}
                            <span class="badge badge-grey">Aucun</span>
                        {% endif %}
                    </div>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>

<div class="row mb-5">
    <div class="col-12">
        <div class="d-flex justify-content-end mt-4">
            <div class="text-center mr-3">{{ buttons.default(path('app_admin_vignette_list_index'), 'Retour à la liste', 'app-entity-list-btn', 'fas fa-angle-left', 'btn-outline-primary') }}</div>
        </div>
    </div>
</div>


