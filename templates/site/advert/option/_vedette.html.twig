{% include 'site/advert/option/__vedette_modal.html.twig' %}

{% if vedettes|length > 0 %}
    <section id="app-option-vedette" class="row mt-4 z-depth-3">
        <div class="col-12">
            <div class="banner">En vedette</div>
            <div class="text-center">
                <div class="row pt-4 pb-md-2 px-2">
                    <div id="recipeCarousel2" class="carousel slide w-100 " data-ride="carousel">
                        <div class="carousel-inner w-100 vv-3" role="listbox">
                            {% for vedette in vedettes %}
                                {% set photo_principale = app_advert_photo(vedette.images) %}

                                {% if vedette.subDivision|length > 0 %}
                                    {% set route = path('app_advert_show', {'category_slug': vedette.category.slug,
                                        'sub_category_slug': vedette.subCategory.slug,
                                        'sub_division_slug': vedette.subDivision.slug,
                                        'city': vedette.location.name, 'reference': vedette.reference,
                                        'slug': vedette.slug}) %}
                                {% else %}
                                    {% set route = path('app_advert_show_s', {'category_slug': vedette.category.slug,
                                        'sub_category_slug': vedette.subCategory.slug,
                                        'city': vedette.location.name, 'reference': vedette.reference,
                                        'slug': vedette.slug}) %}
                                {% endif %}

                                <div class="carousel-item {% if loop.first %}active{% endif %}">
                                    <div class="col-6 col-md-3 col-lg-3">
                                        <a href="{{ route }}" class="">
                                            <div class="card mb-2">
                                                {% if photo_principale %}
                                                    <img class="card-img-top" src="{{ asset(photo_principale.webPath) }}" alt="Image de l'annonce">
                                                {% else %}
                                                    <img class="card-img-top" src="{{ asset('images/no_image.png') }}" alt="Image de l'annonce">
                                                {% endif %}

                                                <div class="card-body text-left px-2 pt-2 pb-0">
                                                    <div class="title">{{ vedette.title|u.truncate(23) }}</div>
                                                    <div class="small grey-text font-weight-stone-500">({{ vedette.location.name }})</div>
                                                    <div class="price text-default d-flex font-weight-stone-600 mt-3 mt-md-4">
                                                        <div class="number">{{ vedette.price }}</div><img src="{{ asset('images/devise.png') }}" class="devise" alt="">
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            {% endfor %}

