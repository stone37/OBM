<div id="app-advert-search-form" class="form-row mb-4">
    <div class="col-12">
        <h6 class="font-weight-stone-600 dark-grey-text">{{ form.type.vars.label }}</h6>
        <div class="btn-group" data-toggle="buttons">
            {% for choices in form.type.vars.choices %}
                <label for="{{ form.type.vars.id }}_{{ loop.index0 }}" class="btn btn-sm btn-amber form-check-label">
                    <input class="form-check-input" type="radio" value="{{ form.type.vars.choices[loop.index0].value }}"
                           name="{{ form.type.vars.full_name }}" id="{{ form.type.vars.id }}_{{ loop.index0 }}" autocomplete="off"
                            {% if app.request.query.has("type") %}
                                {% if app.request.query.get("type") == form.type.vars.choices[loop.index0].value %}checked{% endif %}
                            {% endif %} >
                    {{ form.type.vars.choices[loop.index0].label }}
                </label>
            {% endfor %}
        </div>
    </div>
    <div class="col-12">
        <div class="form-check pl-0 mt-4 pt-2">
            <input type="checkbox" class="form-check-input filled-in" id="{{ form.urgent.vars.id }}"
                   value="{{ form.urgent.vars.value }}" name="{{ form.urgent.vars.full_name }}"
                    {% if app.request.query.has("urgent") %}
                        {% if app.request.query.get("urgent") %}checked{% endif %}
                    {% endif %} />
            <label class="form-check-label font-weight-stone-500 dark-grey-text" for="{{ form.urgent.vars.id }}">{{ form.urgent.vars.label|raw }}
                <i class="fas fa-question-circle ml-1 grey-text material-tooltip-main" data-placement="right" data-toggle="tooltip"
                   title="Rechercher les annonces urgente"></i>
            </label>
        </div>
    </div>
</div>

{% if not category.children|length > 0 %}
    <div class="form-row">
        {% if category.slug == 'voiture-doccasion' or category.slug == 'location-de-voiture'
            or category.slug == 'motocross' or category.slug == 'scooters-et-minimotos'
            or category.slug == 'motos-sport' or category.slug == 'routieres'
            or category.slug == 'autres-motos' or category.slug == 'pieces-de-carrosserie'
            or category.slug == 'transmission-et-train-roulant' or category.slug == 'pieces-et-accessoires-pour-motos'
            or category.slug == 'moteur-pieces-de-moteurs' or category.slug == 'vedettes-et-bateaux-a-moteur'
            or category.slug == 'jet-ski-scooter-des-mers' %}
            <div class="col-12 col-md-6">
                <div class="d-flex flex-wrap">
                    <div class="select-outline position-relative w-100">
                        {{ form_widget(form.marque) }}
                        <label>{{ form.marque.vars.label }}</label>
                    </div>
                </div>
            </div>
        {% endif %}

        {% if category.slug == 'voiture-doccasion' or category.slug == 'location-de-voiture' %}
            <div class="col-12 col-md-6">
                <div class="d-flex flex-wrap">
                    <div class="select-outline position-relative w-100">
                        {{ form_widget(form.model) }}
                        <label>{{ form.model.vars.label }}</label>
                    </div>
                </div>
            </div>
        {% endif %}

        {% if category.slug == 'voiture-doccasion' or category.slug == 'location-de-voiture'
            or category.slug == 'motocross' or category.slug == 'scooters-et-minimotos'
            or category.slug == 'motos-sport' or category.slug == 'routieres'
            or category.slug == 'autres-motos' or category.slug == 'vedettes-et-bateaux-a-moteur'
            or category.slug == 'jet-ski-scooter-des-mers' %}
            <div class="col-12 col-md-6 col-lg-6">
                <div class="d-flex flex-wrap">
                    <div class="select-outline position-relative w-100">
                        {{ form_widget(form.typeCarburant) }}
                        <label>{{ form.typeCarburant.vars.label }}</label>
                    </div>
                </div>
            </div>
        {% endif %}

        {% if category.slug == 'voiture-doccasion' or category.slug == 'motocross'
            or category.slug == 'scooters-et-minimotos' or category.slug == 'motos-sport'
            or category.slug == 'routieres' or category.slug == 'autres-motos' or category.slug == 'camions-lourd' %}
            <div class="col-12 col-md-12">
                <h6 class="font-weight-stone-600 dark-grey-text" style="margin-bottom: -10px">Kilométrage</h6>
                <div class="d-flex align-items-center">
                    {{ form_row(form.kiloMin) }}
                    <span class="px-2 mb-0 text-muted"> - </span>
                    {{ form_row(form.kiloMax) }}
                </div>
            </div>
        {% endif %}

        {% if category.slug == 'voiture-doccasion' or category.slug == 'location-de-voiture'
            or category.slug == 'motocross' or category.slug == 'scooters-et-minimotos'
            or category.slug == 'motos-sport' or category.slug == 'routieres'
            or category.slug == 'autres-motos' or category.slug == 'vedettes-et-bateaux-a-moteur'
            or category.slug == 'jet-ski-scooter-des-mers' or category.slug == 'equipement-agricole'
            or category.slug == 'camions-lourd' %}
            <div class="col-12 col-md-12">
                <h6 class="font-weight-stone-600 dark-grey-text" style="margin-bottom: -10px">Année</h6>
                <div class="d-flex align-items-center">
                    <div class="d-flex flex-wrap">
                        <div class="select-outline position-relative w-100">
                            {{ form_widget(form.autoYearMin) }}
                            <label>{{ form.autoYearMin.vars.label }}</label>
                        </div>
                    </div>
                    <span class="px-2 mb-0 text-muted"> - </span>
                    <div class="d-flex flex-wrap">
                        <div class="select-outline position-relative w-100">
                            {{ form_widget(form.autoYearMax) }}
                            <label>{{ form.autoYearMax.vars.label }}</label>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endif %}

<div class="form-row">
    <div class="col-12" style="margin-bottom: -10px">
        <h6 class="font-weight-stone-600 dark-grey-text">Budget</h6>
    </div>
    <div class="d-flex align-items-center col-8 col-md-7 col-lg-8">
        {{ form_row(form.priceMin) }}
        <span class="px-2 mb-0 text-muted"> - </span>
        {{ form_row(form.priceMax) }}
    </div>
</div>

<div class="form-row">
    <div class="col-12" style="margin-bottom: -10px">
        <h6 class="font-weight-stone-600 dark-grey-text">Lieu</h6>
    </div>
    <div class="col-12 col-md-6">
        <div class="md-form md-outline mb-2 mr-2">
            {{- form_widget(form.city, {'id': 'app-city-name', 'attr': {'class': 'form-control'}}) -}}
            {{- form_label(form.city) -}}
            {{- form_errors(form.city) -}}
        </div>
    </div>
    <div class="col-12 col-md-6">
        <div class="md-form md-outline mb-2 mr-2">
            {{- form_widget(form.zone, {'id': 'app-advert-search-zone', 'attr': {'class': 'form-control'}}) -}}
            {{- form_label(form.zone) -}}
            {{- form_errors(form.zone) -}}
        </div>
        <div class="search-advert-zone-suggestion-box"></div>
    </div>
</div>

