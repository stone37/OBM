<div class="form-row">
    <div class="col-12 col-md-6">
        {{ form_row(form.name) }}
        <small class="form-text text-muted" style="margin-top: -4px">
            Ce champ est obligatoire
        </small>
    </div>
    <div class="col-12 col-md-6">
        {{ form_row(form.email) }}
        <small class="form-text text-muted" style="margin-top: -4px">
            Ce champ est obligatoire
        </small>
    </div>
    <div class="col-12 col-md-10">
        <div class="font-weight-stone-600 grey-text mt-3">{{ form.note.vars.label|raw }} (Ce champ est obligatoire)</div>

        <div class="d-flex justify-content-start mt-2 mb-2">
            <span class="font-weight-stone-600 text-primary mr-2 mt-1">1</span>
            <div class="range-field w-100">
                <input class="border-0" type="range" min="0" max="5" id="{{ form.note.vars.id }}"
                       name="{{ form.note.vars.full_name }}" value="{{ form.note.vars.value }}" />
            </div>
            <span class="font-weight-stone-600 text-primary ml-2 mt-1">5</span>
        </div>
    </div>
    <div class="col-12">
        <div class="md-form md-outline">
            {{ form_widget(form.description) }}
            {{ form_label(form.description) }}
            <div class="red-text font-weight-stone-500">{{ form_errors(form.description) }}</div>
        </div>
        <small class="form-text text-muted" style="margin-top: -19px">
            Ce champ est obligatoire
        </small>
    </div>
    <div class="col-12">
        {{ form_row(form.recaptchaToken) }}
    </div>
</div>


