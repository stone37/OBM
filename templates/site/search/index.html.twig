{% form_theme form 'Ui/Form/theme.html.twig' %}

{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'search-sec'}}) }}
    <div class="row">
        <div class="col-5 p-0">
            <div class="md-form md-outline">
                <input type="text" name="{{ form.data.vars.full_name }}" id="search-box"
                       value="{{ form.data.vars.value }}" class="form-control search-slt input-one search-box"
                       placeholder="Rechercher n'importe quoi..." />
                <label for="search-box"></label>
                <div id="suggestion-box" class="suggestion-box d-none ml-lg-2"></div>
            </div>
        </div>
        <div class="col-3 p-0">
            <div class="select-outline">
                <select id="category" name="{{ form.category.vars.full_name }}" class="mdb-select md-form md-outline
                    colorful-select dropdown-primary search-slt">
                    <option value="" data-fas="fas fa-th">Les catégories</option>
                    {% for category in categories %}
                        <option value="{{ category.id }}"
                                {% if category.name == 'Rencontre' %}
                                data-fab="{{ category.icon }}"{% else %}
                                data-fas="{{ category.icon }}"{% endif %}>
                            {{ category.name }}
                        </option>
                    {% endfor %}
                </select>
                <label>{{ form.category.vars.label }}</label>
            </div>
        </div>
        <div class="col-3 p-0 m-0">
            <div class="md-form md-outline input-with-pre-icon">
                <i class="fas fa-map-marker-alt input-prefix"></i>
                <input id="app-location-input" type="text"
                       {% if app.session.get('app_user_search_city') %}value="{{ app.session.get('app_user_search_city') }}"{% endif %}
                       class="form-control search-slt input-two my-0 mr-1" placeholder="Sélectionner un lieu"
                       style="margin-left: -1px !important;" />
                <label for="app-location-input"></label>
            </div>
        </div>
        <div class="col-1 p-0">
            <div class="md-form md-outline">
                <button type="submit" class="btn btn-primary wrn-btn m-0" style="margin-left: -1.3px !important;">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </div>
{{ form_end(form, {'render_rest': false}) }}


