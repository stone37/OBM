{% if settings.activeVignette %}
<section class="mt-lg-5 mb-lg-4 my-4">
    <div class="row">
        {% if vignettes|length > 0 %}
            <div class="col-12">
                <div class="card card-cascade mb-4">
                    <div class="view view-cascade gradient-card-header bg-primary pt-3 pb-2">
                        <h5 class="card-header-title h5-responsive">Nos partenaires</h5>
                    </div>
                </div>
            </div>

            {% for vignette in vignettes %}
                <div class="col-12 mb-4 app-vignette-bulk">
                    <a href="{{ path('app_vignette_show', {'id': vignette.id}) }}" class="d-flex">
                        <div class="card mx-md-5 mx-lg-0">
                            <div class="row no-gutters">
                                <div class="col-4 col-md-4">
                                    <img src="{{ image_url(vignette, 120, 120) }}" class="img-fluid" alt="" />
                                </div>
                                <div class="col-8 col-md-8">
                                    <div class="card-body px-2 pt-2 pb-0">
                                        <h6 class="font-weight-stone-600">{{ vignette.societyName }}</h6>
                                        <div class="description grey-text d-none d-md-block">
                                            {{ vignette.description|u.truncate(180) }}
                                        </div>
                                        <div class="description grey-text d-block d-md-none">
                                            {{ vignette.description|u.truncate(150) }}
                                        </div>
                                        <div class="text-right small">
                                            <span class="font-weight-stone-600 text-primary">
                                                Voir le site <i class="fas fa-angle-right"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        {% endif %}


        <div class="col-12 app-vignette-create-bulk">
            <a href="{{ path('app_vignette_create') }}" class="d-flex">
                <div class="card mb-4 mx-md-5 mx-lg-0">
                    <div class="card-body py-2 py-lg-3 pl-0 pr-lg-3 pr-2">
                        <div class="row">
                            <div class="col-4 d-flex justify-content-center align-items-center text-center pl-lg-4 pl-md-5">
                                <h5 class="h5-responsive font-weight-stone-600">Créez une publicité</h5>
                            </div>
                            <div class="col-8">
                                <h6 class="font-weight-stone-600 ">Augmentez l’audience de votre site web ou de vos pages sur les réseaux sociaux !</h6>
                                <div class="small dark-grey-text font-weight-stone-500">
                                    Simple et rapide ! <br>
                                    Communiquez en créant votre vignette.
                                </div>
                                <div class="small grey-text font-weight-stone-500">
                                    À partir de
                                    <span class="d-inline-block font-weight-stone-600 text-default price">
                                        <span class="number">{{ product.price }}</span>
                                        <img src="{{ asset('images/devise.png') }}" alt="devise" class="devise d-inline-block">
                                    </span>/semaine
                                </div>
                                <div class="text-right small">
                                    <span class="link font-weight-stone-600">En savoir plus</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>
</section>
{% endif %}

